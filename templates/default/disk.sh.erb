#!/bin/bash

PATH="/opt/local/bin:/opt/local/sbin:/usr/bin:/usr/sbin";

DISK_CAP=`df / | tail -1 | awk '{print $2}'`
DISK_USED=`df / | tail -1 | awk '{print $3}'`

TMP_CAP=`df /tmp | tail -1 | awk '{print $2}'`
TMP_USED=`df /tmp | tail -1 | awk '{print $3}'`

PREFIX="unix:0:disk:"

echo -e "${PREFIX}disk_cap\tn\t${DISK_CAP}"
echo -e "${PREFIX}disk_used\tn\t${DISK_USED}"
echo -e "${PREFIX}tmp_cap\tn\t${TMP_CAP}"
echo -e "${PREFIX}tmp_used\tn\t${TMP_USED}"
